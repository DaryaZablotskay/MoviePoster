@using MoviePoster.Dtos
@model UserRegisterDto

@{
    ViewData["Title"] = "Регистрция";
}

@section Background{
    <style>
        body {
            background: url(https://pibig.info/uploads/posts/2022-12/1670044920_1-pibig-info-p-krasno-chernii-gradient-fon-krasivo-1.jpg);
            background-size: cover;
        }
    </style>
}

@section About{
    <span>
        <font color="white">
            <i class="bi bi-person"></i> Контакты: +375 29 873 17 76,
            <a href="https://vk.com/daryushka_zzz" target="_blank" style="color:red"> Заблоцкая Дарья</a>
        </font>
    </span>
}

<h2 style="position: absolute; left: 520px; top: 70px; font-family: 'Comic Sans MS'">
    <font color="white">Регистрация</font>
</h2>

<div class="form-group row">
    <form asp-action="Register" asp-controller="Authorization" asp-anti-forgery="true" method="post">
        @Html.ValidationSummary(true)
        <div class="col-sm-4" style="position: absolute; left: 400px; top: 130px;">
            @Html.LabelFor(q => q.FirstName, "Имя", new { @class = "form-label", style = "color: white"})
            @Html.TextBoxFor(q => q.FirstName, new { @class = "form-control", placeholder = "Иван" })
            @Html.ValidationMessageFor(q => q.FirstName, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-4" style="position: absolute; left: 400px; top: 200px; ">
            @Html.LabelFor(q => q.LastName, "Фамилия", new { @class = "form-label", style = "color: white" })
            @Html.TextBoxFor(q => q.LastName, new { @class = "form-control", placeholder = "Иванов" })
            @Html.ValidationMessageFor(q => q.LastName, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-4" style="position: absolute; left: 400px; top: 270px; ">
            @Html.LabelFor(q => q.Email, "Email", new { @class = "form-label", style = "color: white" })
            @Html.TextBoxFor(q => q.Email, new { @class = "form-control", placeholder = "name@example.com" })
            @Html.ValidationMessageFor(q => q.Email, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-4" style="position: absolute; left: 400px; top: 340px; ">
            @Html.LabelFor(q => q.Password, "Пароль", new { @class = "form-label", style = "color: white" })
            @Html.TextBoxFor(q => q.Password, new { type = "password", @class = "form-control", placeholder = "Введите пароль" })
            @Html.ValidationMessageFor(q => q.Password, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-sm-4" style="position: absolute; left: 400px; top: 410px; ">
            @Html.LabelFor(q => q.PasswordConfirmed, "Подтвердить пароль", new { @class = "form-label", style = "color: white" })
            @Html.TextBoxFor(q => q.PasswordConfirmed, new { type = "password", @class = "form-control", placeholder = "Повторите пароль" })
            @Html.ValidationMessageFor(q => q.PasswordConfirmed, string.Empty, new { @class = "text-danger" })
        </div>
        <div style="position: absolute; top: 510px; left:560px">
            <button type="submit" class="btn btn-danger">Регистрация</button>
        </div>
    </form>
</div>